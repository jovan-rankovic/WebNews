@model Application.DataTransfer.ArticleDto

@{
    ViewData["Title"] = "Edit an article";
}

<h1>Edit an article</h1>

@if (TempData["error"] != null)
{
    <p class="alert alert-danger">@TempData["error"]</p>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Author:</p>
                <select name="AuthorId">
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.Id">@user.FirstName @user.LastName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <p>Categories:</p>
                @foreach (var category in ViewBag.Categories)
                {
                    <label><input type="checkbox" name="CategoryId[]" value="@category.Id" /> @category.Name</label>
                }
            </div>
            <div class="form-group">
                <p>Hashtags:</p>
                @foreach (var hashtag in ViewBag.Hashtags)
                {
                    <label><input type="checkbox" name="HashtagId[]" value="@hashtag.Id" /> @hashtag.Tag</label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}